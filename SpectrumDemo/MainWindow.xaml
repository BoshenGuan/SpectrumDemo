<Window
    x:Class="SpectrumDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Spectrum"
    Title="MainWindow"
    Width="1400"
    Height="800"
    Loaded="Window_Loaded">
    <Grid>
        <Button
            x:Name="btnRun"
            Width="75"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnRun_Click"
            Content="Run" />
        <Button
            x:Name="btnStop"
            Width="75"
            Margin="10,37,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnStop_Click"
            Content="Stop" />

        <Grid Margin="100,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <local:SpectrumAnalyzer x:Name="spectrumAnalyzer" Grid.Row="0" />
            <local:Waterfall x:Name="waterfall" Grid.Row="2" />
        </Grid>

    </Grid>
</Window>
